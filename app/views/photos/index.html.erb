<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>
      </div>

      <div>
        <label for="posted_box">
          Posted
        </label>

        <input type="date" id="posted_box" name="query_posted">
      </div>

      <div>
        <label for="like_count_box">
          Like count
        </label>

        <input type="text" id="like_count_box" name="query_like_count">
      </div>

      <div>
        <label for="comment_count_box">
          Comment count
        </label>

        <input type="text" id="comment_count_box" name="query_comment_count">
      </div>

      <div>
        <label for="fans_box">
          Fans
        </label>

        <textarea id="fans_box" name="query_fans" rows="3"></textarea>
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="query_comments" rows="3"></textarea>
      </div>

      <div>
        <label for="photo_id_box">
          Photo
        </label>

        <input type="text" id="photo_id_box" name="query_photo_id">
      </div>

      <button>
        Create photo
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Caption
        </th>

        <th>
          Posted
        </th>

        <th>
          Like count
        </th>

        <th>
          Comment count
        </th>

        <th>
          Fans
        </th>

        <th>
          Comments
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <%= a_photo.title %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.posted %>
        </td>

        <td>
          <%= a_photo.like_count %>
        </td>

        <td>
          <%= a_photo.comment_count %>
        </td>

        <td>
          <%= a_photo.fans %>
        </td>

        <td>
          <%= a_photo.comments %>
        </td>

        <td>
          <%= a_photo.photo_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
